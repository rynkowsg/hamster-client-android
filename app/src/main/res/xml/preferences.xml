<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="DBus Connection">
        <EditTextPreference
            android:defaultValue="@string/host"
            android:inputType="textUri"
            android:key="host"
            android:summary="@string/pref_host_summary"
            android:title="@string/pref_host_title" />
        <EditTextPreference
            android:defaultValue="@string/port"
            android:inputType="number"
            android:key="port"
            android:summary="@string/pref_port_summary"
            android:title="@string/pref_port_title" />
    </PreferenceCategory>
</PreferenceScreen>
