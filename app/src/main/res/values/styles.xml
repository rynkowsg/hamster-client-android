<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--http://developer.xamarin.com/guides/android/platform_features/android_l/material_theme/#4.using-custom-themes-->
    <!--https://developer.android.com/training/material/theme.html#StatusBar-->
    <!--https://github.com/google/iosched/blob/master/android/src/main/res/values/styles.xml-->

    <!-- [General application styles] -->
    <!-- Root styles that vary by API level -->
    <!-- Disable RTL support on older devices -->
    <!-- Prevents crash on certain devices to namespace conflict -->
    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Immediate parent theme to specify base values for custom attributes -->
    <style name="Theme" parent="FrameworkRoot.Theme">
        <!-- Only needed for pre-L -->
        <!--<item name="android:editTextBackground">@drawable/edit_text</item>-->
        <!--<item name="android:editTextStyle">@style/Widget.IOSched.EditText</item>-->
    </style>

    <style name="Theme.Hamster.Base" parent="Theme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
    </style>

    <style name="Theme.Hamster" parent="Theme.Hamster.Base" />


    <!-- [ActionBar] -->
    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="ActionBar.Base" parent="Theme.Hamster">
        <item name="popupTheme">@style/ActionBarPopupThemeOverlay</item>
        <item name="theme">@style/ActionBarThemeOverlay</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
        <item name="android:textAppearance">@style/ActionBar.TitleText</item>
    </style>

    <style name="ActionBar" parent="ActionBar.Base" />

</resources>
