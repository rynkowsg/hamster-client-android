<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.rynkowski.hamsterclient.presentation">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".AndroidApplication"
        android:theme="@style/Theme.HamsterClient">

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.FactFormActivity"
            android:label="@string/title_activity_fact_form">
        </activity>

        <activity
            android:name=".view.activity.FactListActivity"
            android:label="@string/title_activity_fact_list">
        </activity>

    </application>

</manifest>
